# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and update with your settings
# DO NOT commit .env to version control!
#
# For production: Set these as server environment variables
# instead of using a .env file for better security.
# ============================================

# --------------------------------------------
# Application Settings
# --------------------------------------------

# Application name (displayed in UI)
APP_NAME=LibraryHub

# Environment: development, staging, production
# IMPORTANT: Set to 'production' on live servers
APP_ENV=development

# Enable debug mode (true/false)
# WARNING: NEVER set to true in production!
APP_DEBUG=true

# Base URL of your application
# Development: /lib_system/library_system
# Production: https://yourdomain.com or leave empty for root
APP_URL=/LibraryHub

# --------------------------------------------
# Database Configuration
# --------------------------------------------

# Database host
# Development: 127.0.0.1 or localhost
# Production: Your database server hostname
DB_HOST=127.0.0.1

# Database port (default MySQL port is 3306)
DB_PORT=3306

# Database name
DB_DATABASE=library_db

# Database username
DB_USERNAME=root

# Database password
# Development: Leave empty for XAMPP default
# Production: Use a strong password!
DB_PASSWORD=

# --------------------------------------------
# Asset Configuration
# --------------------------------------------

# URL for static assets (CSS, JS, images)
# Development: /lib_system/library_system/assets
# Production with CDN: https://cdn.yourdomain.com/assets
ASSET_URL=/LibraryHub/assets

# --------------------------------------------
# Session Configuration
# --------------------------------------------

# Session lifetime in seconds (7200 = 2 hours)
SESSION_LIFETIME=7200

# Use secure cookies (true for HTTPS, false for HTTP)
# IMPORTANT: Set to true in production with HTTPS
SESSION_SECURE=false

# HTTP only cookies (recommended for security)
SESSION_HTTP_ONLY=true

# --------------------------------------------
# Production Example Configuration
# --------------------------------------------
# Uncomment and modify these for production:
#
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://library.yourdomain.com
# DB_HOST=prod-db.yourdomain.com
# DB_PASSWORD=your_secure_password_here
# ASSET_URL=https://cdn.yourdomain.com/assets
# SESSION_SECURE=true
